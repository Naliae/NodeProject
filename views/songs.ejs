<% include partials/header %>

<div class="container">
  <form action="/songs/songs" method="GET">
    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <label for="selectSearch">Search by...  </label>
          <select class="form-control" name="selectSearch" id="selectSearch">
            <option value="title"> Title </option>
            <option value="album"> Album </option>
            <option value="artist"> Artist</option>
            <option value="year"> Year </option>
            <option value="bpm"> Bpm </option>
          </select>
        </div>
      </div><!-- /.col-lg-4 -->
      <div class="col-lg-4">
        <input type="text" class="form-control" name="inputSearch" placeholder="Search">
        <span class="input-group-btn">
          <input class="btn btn-default" type="submit" value="Go !">
        </span>
      </div>
    </div><!-- /.row -->
    </form>
    <br/>
    <div class="row">
      <p> <%= songs.length %> chansons trouv√©es </p>
      <br/>
      <table class="col-md-6 table table-striped">
        <tr>
          <th>Title</th>
          <th>Album</th>
          <th>Artist</th>
          <th>Year</th>
          <th>Bpm</th>
          <% songs.forEach(function(song) {%>
              <tr>
                  <td>
                      <a href="/songs/<%=song._id%>"><%=song.title%></a>
                  </td>
                  <td><%=song.album%></td>
                  <td><%=song.artist%></td>
                  <td>
                      <% if (song.year) { %><%=song.year%><% } %>
                  </td>
                  <td>
                      <% if (song.bpm) { %><%=song.bpm%><% } %>
                  </td>
              </tr>
          <% }) %>
      </table>
    </div>
  </div>
<% include partials/footer %>
