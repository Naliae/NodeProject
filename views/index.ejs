<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="col-md-6">
        <h2> Derniers utilisateurs </h2>
        <table class="table table-bordered table-striped">
          <tr>
            <th>Utilisateurs</th>
            <th>Email</th>
          </tr>
          <% users.forEach(function(user) {%>
            <tr>
                <td><a href="/users/<%=user._id%>"><%= user.displayName %> <%= user.username %></td>
                <td><%= user.email %></td>
            </tr>
          <% }) %>
        </table>
      </div>
      <div class="col-md-6">
        <h2> Top 5 des chansons favorites! </h2>
        <table class="col-md-5 table table-bordered table-striped">
          <tr>
            <th>NumÃ©ro</th>
            <th>Titre</th>
          </tr>
          <% var i=0 %>
          <% notes.forEach(function(note) { i++ %>
              <tr>
                  <td><%= i %></td>
                  <td>
                    <%= note.song.title %>
                    <% for (j=0; j<note.note; j++) { %>
                      <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <% } %>
                  </td>
              </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>
